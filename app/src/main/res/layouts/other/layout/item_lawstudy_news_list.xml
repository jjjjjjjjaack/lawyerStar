<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_85">

    <com.qbo.lawyerstar.app.view.ChangeGasStationImageView2
        android:id="@+id/newslogo_iv"
        android:layout_width="@dimen/dp_92"
        android:layout_height="@dimen/dp_69"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_12"
        android:scaleType="centerCrop"
        app:lbottom="@dimen/dp_4"
        app:ltop="@dimen/dp_4"
        app:rbottom="@dimen/dp_4"
        app:rtop="@dimen/dp_4"
        />

    <TextView
        android:id="@+id/newsname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toLeftOf="@id/newslogo_iv"
        android:layout_marginRight="@dimen/dp_17"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toLeftOf="@id/newslogo_iv"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:id="@+id/read_iv"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:src="@mipmap/ic_news_read_1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/newsreadnum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffcccccc"
            android:textSize="12sp"
            android:layout_toRightOf="@id/read_iv"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_centerVertical="true"
            />


        <TextView
            android:id="@+id/newsdate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_45"
            android:textColor="#ffcccccc"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/c_f4f4f4"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        />


</RelativeLayout>