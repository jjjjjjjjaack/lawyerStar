<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_320"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ffffff_r8"
    android:gravity="center_horizontal"
    android:minWidth="@dimen/dp_270"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:maxLines="1"
        android:textColor="#ff000000"
        android:textSize="17sp"
        tools:text="提示" />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_8"
        android:textColor="#ff444444"
        android:textSize="13sp"
        tools:text="是否确定‘确认收货’?" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ok_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="1"
            android:background="@drawable/shape_02c4c3_r4"
            android:gravity="center"
            android:textColor="@color/c_ffffff"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/cancle_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_weight="1"
            android:background="@drawable/shape_storke_cccccc_r4"
            android:gravity="center"
            android:textColor="@color/c_cccccc"
            android:textSize="14sp" />

    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_12" />

</LinearLayout>