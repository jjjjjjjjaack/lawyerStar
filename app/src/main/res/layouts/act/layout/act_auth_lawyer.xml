<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-atuo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/view_title_comm_2" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/status_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_17"
                android:layout_marginBottom="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_8"
                android:visibility="gone"
                android:paddingBottom="@dimen/dp_8">

                <ImageView
                    android:id="@+id/status_iv"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_15" />

                <TextView
                    android:id="@+id/status_reason_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="审核中，请耐心等待"
                    android:textColor="#fff3a239"
                    android:textSize="15sp" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/logo_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_74"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/user_info_tx2"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <com.qbo.lawyerstar.app.view.ChangeGasStationImageView2
                    android:id="@+id/userlogo_civ"
                    android:layout_width="@dimen/dp_52"
                    android:layout_height="@dimen/dp_52"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/arrow1_iv"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_userlogo_default_1"
                    app:lbottom="@dimen/dp_2"
                    app:ltop="@dimen/dp_2"
                    app:rbottom="@dimen/dp_2"
                    app:rtop="@dimen/dp_2" />

                <ImageView
                    android:id="@+id/arrow1_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_right_arrow_black_3" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_f4f4f4" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">


                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/user_info_tx3"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:gravity="right"
                    android:layout_toRightOf="@id/tv2"
                    android:background="@null"
                    android:hint="@string/user_auth_personal_tx3_1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_f4f4f4" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">


                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/user_auth_personal_tx4"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/man_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_toLeftOf="@id/woman_ll"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@drawable/selector_checkbox_style_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="@string/man_tx"
                        android:textColor="#ff333333"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/woman_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@drawable/selector_checkbox_style_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="@string/woman_tx"
                        android:textColor="#ff333333"
                        android:textSize="16sp" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_f4f4f4" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/address_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">


                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/user_auth_personal_tx5"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/addressinfo_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:gravity="right"
                    android:layout_toLeftOf="@id/arrow4_iv"
                    android:layout_toRightOf="@id/tv4"
                    android:background="@null"
                    android:hint="@string/user_auth_personal_tx5_1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/arrow4_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_right_arrow_black_3" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_f4f4f4" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">


                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/user_auth_lawyer_tx2"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/scly_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_toRightOf="@id/tv5"
                    android:background="@null"
                    android:hint="@string/user_auth_lawyer_tx2_1"
                    android:gravity="right"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_f4f4f4" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">


                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/user_auth_lawyer_tx3"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/cyns_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_toRightOf="@id/tv6"
                    android:background="@null"
                    android:hint="@string/user_auth_lawyer_tx3_1"
                    android:gravity="right"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_f4f4f4" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">


                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/user_auth_lawyer_tx4"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/gejx_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_toRightOf="@id/tv7"
                    android:background="@null"
                    android:hint="@string/user_auth_lawyer_tx4_1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:gravity="right"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_f4f4f4" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_27"
                android:text="@string/user_auth_lawyer_tx5"
                android:textColor="#ff333333"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/select_zz_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_190"
                android:layout_marginLeft="@dimen/dp_34"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginRight="@dimen/dp_34"
                android:background="@drawable/shape_storke_666666_r8"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/select_tipview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_select_idcard_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/user_auth_lawyer_tx7"
                        android:textColor="#ff333333"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/zz_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_select_idcard_1"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pliocy_iv"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/selector_checkbox_style_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_16" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_auth_lawyer_tx6"
                    android:textColor="#ff02C4C3"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="》"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_16" />

            </LinearLayout>


            <TextView
                android:id="@+id/commit_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_37"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/selector_comm_btn"
                android:gravity="center"
                android:text="@string/commit_tx"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/sp_16" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>