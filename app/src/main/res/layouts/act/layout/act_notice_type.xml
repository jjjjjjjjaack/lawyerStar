<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <include layout="@layout/view_title_comm_2" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/sys_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_18"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_notice_sys_1" />


                <TextView
                    android:id="@+id/title0_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_toRightOf="@id/iv1"
                    android:text="@string/notice_list_tx2"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/syscontent_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title0_tv"
                    android:layout_alignLeft="@id/title0_tv"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@id/sysnum_v"
                    android:singleLine="true"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/sysnum_v"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="match_parent"
                    android:layout_below="@id/date_tv"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_8" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wtuo_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_18"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_wt_notice_1" />


                <TextView
                    android:id="@+id/title1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_toRightOf="@id/iv2"
                    android:text="@string/notice_list_tx3"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/wtcontent_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title1_tv"
                    android:layout_alignLeft="@id/title1_tv"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@id/wtnum_v"
                    android:singleLine="true"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/wtdate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <FrameLayout
                    android:id="@+id/wtnum_v"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="match_parent"
                    android:layout_below="@id/wtdate_tv"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_8" />

            </RelativeLayout>
        </LinearLayout>


    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</LinearLayout>