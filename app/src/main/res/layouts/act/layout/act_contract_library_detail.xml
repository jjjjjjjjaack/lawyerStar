<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/view_title_comm_2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_rl"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/shape_ffffff_r6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_14"
                android:textColor="#ff333333"
                android:textSize="16sp"
                tools:text="欠款协议书,欠款,欠条" />

            <TextView
                android:id="@+id/content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="#ff666666"
                android:textSize="14sp"
                tools:text="欠款协议合同" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@color/c_f4f4f4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/topprice_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff83131"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/dp_12"
                        tools:text="90元" />


                    <TextView
                        android:id="@+id/free_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/shape_storke_02c4c3_r2"
                        android:paddingLeft="@dimen/dp_4"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_4"
                        android:paddingBottom="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="会员免费"
                        android:textColor="#ff02c4c3"
                        android:textSize="10sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/download_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:textColor="#ff666666"
                    android:textSize="14sp"
                    tools:text="2530下载过" />
            </RelativeLayout>


        </LinearLayout>
        
        <FrameLayout
            android:id="@+id/webview_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_64"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            >

            <View
                android:id="@+id/zz_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_28f4f4f4_2_fff4f4f4"
                />

            <TextView
                android:id="@+id/more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contract_lib_list_tx6"
                android:layout_marginBottom="@dimen/sp_20"
                android:textColor="#ff999999"
                android:textSize="10sp"
                android:layout_gravity="center_horizontal|bottom"
                />
        </FrameLayout>

        

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_alignParentBottom="true"
        android:background="@color/c_ffffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#fff83131"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/bottomprice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="90"
                android:textColor="#fff83131"
                android:textSize="22sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:text="@string/contract_lib_list_tx5"
                android:textColor="#ff666666"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/topay_tv"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/selector_comm_btn"
            android:gravity="center"
            android:text="@string/contract_lib_list_tx4"
            android:textColor="#ffffffff"
            android:textSize="12sp" />


    </RelativeLayout>
</RelativeLayout>