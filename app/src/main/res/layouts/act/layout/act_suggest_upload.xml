<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/view_title_comm_2" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_rl"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_ffffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_32"
                android:text="@string/suggest_upload_tx2"
                android:textColor="#ff333333"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_rcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_32"
                android:text="@string/suggest_upload_tx3"
                android:textColor="#ff333333"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/content_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_168"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@color/c_f7f7f7"
                android:gravity="top|left"
                android:hint="@string/suggest_upload_tx3_1"
                android:textSize="@dimen/sp_14"
                android:paddingLeft="@dimen/dp_18"
                android:paddingTop="@dimen/dp_16"
                android:paddingRight="@dimen/dp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_28"
                android:text="@string/suggest_upload_tx4"
                android:textColor="#ff333333"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/image_rcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_12"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/main_bg"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/commit_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:text="@string/commit_tx"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:background="@color/c_02c4c3"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        />

</RelativeLayout>