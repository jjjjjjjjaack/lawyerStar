<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            >

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="@dimen/dp_59"
                android:layout_height="@dimen/dp_50">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentLeft="true"

                    android:src="@mipmap/ic_black_left_arrow_1" />

            </RelativeLayout>

            <TextView
                android:id="@+id/jump_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="跳过"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/main_color"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_25"
            android:text="@string/bind_phone_1"
            android:textColor="#ff333333"
            android:textSize="24sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_2"
            android:text="@string/bind_phone_2"
            android:textColor="#ff999999"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@null"
            android:hint="@string/login_tx3"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/c_333333"
            android:textColorHint="#ff999999"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@color/c_f7f7f7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_49"
            android:layout_marginRight="@dimen/dp_12"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/code_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_toLeftOf="@id/getcode_tv"
                android:background="@null"
                android:hint="@string/login_tx4"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/c_333333"
                android:textColorHint="#ff999999"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/code_et"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_toLeftOf="@id/getcode_tv"
                android:background="@color/c_f7f7f7" />

            <TextView
                android:id="@+id/getcode_tv"
                android:layout_width="@dimen/dp_77"
                android:layout_height="@dimen/dp_32"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_storke_02c4c3_r2"
                android:gravity="center"
                android:text="@string/register_send_code"
                android:textColor="#ff02c4c3"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tologin_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_77"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/selector_comm_btn"
            android:gravity="center"
            android:text="@string/bind_phone_3"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>